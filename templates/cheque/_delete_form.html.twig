<form method="post" action="{{ path('cheque_delete', {'id': cheque.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input class="btn btn-success mr-2" type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cheque.id) }}">
    <button class="btn btn-bg-danger mr-2">Delete</button>
</form>
